<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_duzenle_Adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_duzenle_OkulNo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Ögrenci adı" />

    <Button
        android:id="@+id/btnSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_duzenle_Sinif"
        android:layout_marginBottom="54dp"
        android:layout_marginRight="17dp"
        android:text="Sil" />

    <Button
        android:id="@+id/btnGuncelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSil"
        android:layout_alignBottom="@+id/btnSil"
        android:layout_alignLeft="@+id/et_duzenle_Adi"
        android:text="Güncelle" />

    <EditText
        android:id="@+id/et_duzenle_OkulNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_duzenle_Bolum"
        android:layout_alignLeft="@+id/et_duzenle_Adi"
        android:ems="10"
        android:hint="Ögrenci okul numarası" />

    <EditText
        android:id="@+id/et_duzenle_Sinif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSil"
        android:layout_alignLeft="@+id/btnGuncelle"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Sınıf" />

    <EditText
        android:id="@+id/et_duzenle_Bolum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_duzenle_Sinif"
        android:layout_alignLeft="@+id/et_duzenle_Sinif"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Bölüm" >

        <requestFocus />
    </EditText>

</RelativeLayout>
